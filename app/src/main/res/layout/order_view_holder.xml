<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coffee_shop_card"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    app:cardCornerRadius="@dimen/corner_size_view_holder"
    android:backgroundTint="@color/coffee_shop_item_view_holder_color"
    app:cardElevation="@dimen/normal_50"
    android:layout_marginBottom="@dimen/margin_view_holder"
    android:layout_marginTop="@dimen/margin_view_holder"
    android:layout_marginStart="@dimen/normal_100"
    android:layout_marginEnd="@dimen/normal_100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text = "Капучино"

            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/normal_50"
            android:layout_marginStart="@dimen/normal_100"
            />
        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "200 руб"
            android:textSize="18dp"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_below="@+id/order_item_name"
            />

        <com.example.sevenwindstesttask.presentation.view.Counter
            android:id="@+id/order_item_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/normal_100"
            />

    </RelativeLayout>
    
    
</androidx.cardview.widget.CardView>
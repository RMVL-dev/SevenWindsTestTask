<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoffeeShopEditTextShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_text_input_fields</item>
    </style>

    <style name="TextInputLayoutTextAppearance">
        <item name="android:textSize">@dimen/text_field</item>
    </style>

    <style name="MaterialButtonTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CoffeeTextInputStyle"
        parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/CoffeeShopEditTextShape</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke_color</item>
        <item name="android:textAppearance">@style/TextInputLayoutTextAppearance</item>
        <item name="hintTextAppearance">@style/TextInputLayoutTextAppearance</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="endIconTint">@color/coffee_color</item>
        <item name="boxStrokeErrorColor">@color/error_sign_in</item>
    </style>

    <style name="CoffeeButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/MaterialButtonTextAppearance</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="CoffeeMaterialToolBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/toolbar_container_color</item>
        <item name="titleTextColor">@color/toolbar_text_color</item>
        <item name="titleTextAppearance">@style/MaterialToolbarTextAppearance</item>
    </style>
</resources>